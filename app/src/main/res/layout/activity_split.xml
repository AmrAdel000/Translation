<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:id="@+id/drwerrf"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".split"
    android:layoutDirection="rtl">

    <androidx.coordinatorlayout.widget.CoordinatorLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:layoutDirection="rtl">


        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/barr"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_228sdp"
            android:background="#00FFFFFF"
            android:fitsSystemWindows="true"
            android:theme="@style/Theme.Translation">

            <com.google.android.material.appbar.CollapsingToolbarLayout

                android:id="@+id/collapsing_toolbarr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleGravity="right"
                app:contentScrim="@color/white100"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:titleEnabled="true"
                app:titleCollapseMode="fade">

                <TextView
                    android:id="@+id/texevew22"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_marginRight="@dimen/_52sdp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_marginTop="@dimen/_105sdp"
                    android:background="@drawable/shape2"
                    android:gravity="center"
                    android:onClick="menuee"
                    android:text="ترجمه الي اللغة الانجليزيه"
                    android:textColor="@color/main2textvew2"
                    app:layout_collapseMode="parallax" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="@dimen/_34sdp"
                    android:layout_marginTop="@dimen/_187sdp"
                    android:background="@drawable/shape_view"
                    android:layout_marginRight="@dimen/_9sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <ImageButton
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:background="@drawable/ic_icons8_flat_settings_svg"
                    android:fitsSystemWindows="true"
                    android:onClick="main_menuer"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed" />

                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:layout_marginRight="@dimen/_275sdp"
                    android:background="@drawable/ic_save__1_"
                    android:fitsSystemWindows="true"
                    android:onClick="Favorite_page"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed" />

                <ImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_gravity="center|right"
                    android:layout_marginTop="@dimen/_90sdp"
                    android:layout_marginRight="@dimen/_220sdp"
                    android:background="@drawable/speak_icon"
                    android:fitsSystemWindows="true"
                    android:onClick="read_button"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed" />


                <EditText
                    android:id="@+id/texevew1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_81sdp"
                    android:layout_marginTop="@dimen/_23sdp"
                    android:background="#007E91AF"
                    android:gravity="center"
                    android:hint="اكتب هنا للترجمه"

                    android:padding="@dimen/_11sdp"
                    android:textColor="@color/main1title"
                    android:textColorHint="@color/hint2"
                    android:textSize="@dimen/_25sdp"
                    app:layout_collapseMode="parallax" />

                <EditText
                    android:id="@+id/text11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_130sdp"
                    android:background="#007E91AF"
                    android:gravity="center"
                    android:padding="@dimen/_11sdp"
                    android:textColor="#346AC2"
                    android:textSize="20dp"
                    app:layout_collapseMode="parallax" />

                <Button
                    android:id="@+id/buttoncv"
                    android:layout_width="@dimen/_46sdp"
                    android:layout_height="@dimen/_53sdp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_176sdp"
                    android:onClick="btn_savee"
                    android:text="حفظ"
                    android:textColor="@color/buttontextcolor"
                    android:textSize="@dimen/_9sdp"
                    app:backgroundTint="@color/buttoncolor"
                    app:cornerRadius="@dimen/_69sdp" />


                <ImageButton
                    android:id="@+id/buttonvv"
                    android:layout_width="@dimen/_23sdp"
                    android:layout_height="@dimen/_21sdp"
                    android:layout_marginTop="@dimen/_193sdp"
                    android:onClick="sevebbb"
                    android:layout_marginRight="@dimen/_65sdp"
                    android:background="@drawable/imagecopy"
                    android:textColor="#20262F"
                    android:textSize="@dimen/_12sdp"
                    app:cornerRadius="@dimen/_69sdp"/>




            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/nested"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/_4sdp"
            android:paddingRight="@dimen/_4sdp"
            android:paddingTop="@dimen/_6sdp"
            android:background="@drawable/shape3"
            app:layout_anchorGravity="center_horizontal"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

        </androidx.recyclerview.widget.RecyclerView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/drawer2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@drawable/drawer_background"
        android:fitsSystemWindows="true"
        android:maxWidth="@dimen/_250sdp"
        app:headerLayout="@layout/heder"
        app:menu="@menu/navigation">

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
